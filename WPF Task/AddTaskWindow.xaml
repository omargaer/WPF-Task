<Window x:Class="WPF_Task.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_Task"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Title:"/>
        <TextBox Name="TitleTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Description:"/>
        <TextBox Name="DescriptionTextBox" Margin="0,0,0,10"/>
        <Button Content="OK" Click="OkButton_Click" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
